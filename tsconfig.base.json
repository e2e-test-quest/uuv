{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],
    "module": "CommonJS",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": true,
    "declaration": true,
    "declarationMap": false,
    "baseUrl": ".",
    "rootDir": ".",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "paths": {
      "@uuv/runner-commons": ["packages/runner-commons/src/index.ts"],
      "@uuv/runner-cypress": ["packages/runner-cypress/src/index.ts"],
      "@uuv/runner-playwright": ["packages/runner-playwright/src/index.ts"],
      "@uuv/runner-commons/wording/web": ["packages/runner-commons/src/assets/i18n/web/index.ts"],
      "@uuv/runner-commons/wording/mobile": ["packages/runner-commons/src/assets/i18n/mobile/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp", "**/dist/**.*"]
}
