{
  "name": "assistant",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/assistant/src",
  "projectType": "library",
  "targets": {
    "build:tsc": {
      "executor": "@nrwl/js:tsc",
      "inputs": [
        "{projectRoot}/launcher/*"
      ],
      "outputs": [
        "{projectRoot}/dist"
      ],
      "options": {
        "rootDir": "packages/assistant",
        "outputPath": "packages/assistant/dist/",
        "main": "packages/assistant/launcher/index.ts",
        "tsConfig": "packages/assistant/tsconfig.launcher.json",
        "assets": [
          "packages/assistant/*.md"
        ]
      }
    },
    "build": {
      "executor": "nx:run-script",
      "inputs": [
        "{projectRoot}/bundle-script.js",
        "{projectRoot}/dist/launcher/conf.json"
      ],
      "outputs": [
        "{projectRoot}/dist/uuv-assistant-resources.bundle.js"
      ],
      "options": {
        "script": "build:bundle"
      },
      "dependsOn": [
        "build:conf"
      ]
    },
    "build:conf": {
      "executor": "nx:run-script",
      "inputs": [
        "{projectRoot}/compute-conf.js",
        "{projectRoot}/build/asset-manifest.json"
      ],
      "outputs": [
        "{projectRoot}/dist/launcher/conf.json",
        "{projectRoot}/launcher/conf.json"
      ],
      "options": {
        "script": "build:conf"
      },
      "dependsOn": [
        "build:react",
        "build:tsc",
        "build:copy-sentences"
      ]
    },
    "build:react": {
      "executor": "nx:run-script",
      "inputs": [
        "{projectRoot}/src/*"
      ],
      "outputs": [
        "{projectRoot}/build"
      ],
      "options": {
        "script": "build:react"
      }
    },
    "build:copy-sentences": {
      "executor": "nx:run-script",
      "inputs": [
        "{projectRoot}/copy-sentences.ts",
        "{projectRoot}/../runner-commons/src/assets/i18n/en.json",
        "{projectRoot}/../runner-commons/src/assets/i18n/en-enriched-wordings.json"
      ],
      "outputs": [
        "{projectRoot}/src/assets/en.json",
        "{projectRoot}/src/assets/en-enriched-wordings.json"
      ],
      "options": {
        "script": "build:copy-sentences"
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": [
        "{options.outputFile}"
      ],
      "options": {
        "lintFilePatterns": [
          "packages/assistant/src/**/*.{jsx,tsx}"
        ],
        "fix": true,
        "eslintConfig": "packages/assistant/.eslintrc.json"
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": [
        "{workspaceRoot}/coverage/{projectRoot}"
      ],
      "options": {
        "jestConfig": "packages/assistant/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "semantic-release": {
      "executor": "@theunderscorer/nx-semantic-release:semantic-release",
      "options": {
        "commitMessage": "release(assistant): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}",
        "plugins": [
          [
            "@semantic-release/npm",
            {
              "npmPublish": false,
              "tarballDir": "dist/packages",
              "pkgRoot": "packages/assistant"
            }
          ],
          [
            "@semantic-release/github",
            {
              "successComment": false,
              "failComment": false,
              "assets": [
                {
                  "path": "dist/packages/uuv-assistant-*.tgz",
                  "label": "Npm Package"
                }
              ]
            }
          ]
        ]
      }
    }
  }
}
