{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2015",
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "launcher",
    "src/index.ts",
    "src/Commons.ts",
    "src/helper/**/*.ts",
    "src/service/**/*.ts",
    "src/translator/**/*.ts"
  ]
}
